FROM node:24-bookworm-slim@sha256:a81a03dd965b4052269a57fac857004022b522a4bf06e7a739e25e18bce45af2 as build

WORKDIR /app
COPY src/package*.json ./
RUN npm install
COPY src .
RUN npm run build

#stable-alpine v3.23
FROM nginx@sha256:341bf0f3ce6c5277d6002cf6e1fb0319fa4252add24ab6a0e262e0056d313208
COPY --from=build /app/dist /usr/share/nginx/html