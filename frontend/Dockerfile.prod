FROM node:24-bookworm-slim@sha256:a81a03dd965b4052269a57fac857004022b522a4bf06e7a739e25e18bce45af2 as build

WORKDIR /app
COPY src/package*.json ./
RUN npm install
COPY src .
RUN npm run build

#stable-alpine v3.23
FROM nginx@sha256:57e903d5641d80334bd51985b8bcecad80d36b30cd0b6408b851333fca1d88bf
COPY --from=build /app/dist /usr/share/nginx/html